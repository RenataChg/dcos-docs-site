- var paths = path.split('/')
- var currentPath = '/' + path
- var item = hierarchy
- var type = null
- var versionTitle = ''
- var semver = /^[0-9]+\.[0-9]+/
- var semverService = /^(v|)[0-9](.*)/
- var dropdown = []


// Service Docs
if paths[1] === 'services' && paths[2]
  - item = hierarchy.findByPath('/' + paths[0] + '/' + paths[1] + '/' + paths[2])
  - var versioned = item.children.reduce((acc, x) => acc + semverService.test(x.id), false)
  - type = hierarchy.findByPath('/' + paths[0] + '/' + paths[1] + '/' + paths[2])
  if versioned
    - versionTitle = paths[3]
    if !semverService.test(paths[3])
      - versionTitle = navigationTitle || title
    - dropdown = type.children
    if paths[3]
      - tmpItem = hierarchy.findByPath('/' + paths[0] + '/' + paths[1] + '/' + paths[2] + '/' + paths[3])
    if tmpItem
      - item = tmpItem

// DC/OS Docs
if paths[0] === 'dcos' && semver.test(paths[1])
  - type = hierarchy.children.filter(child => child.id == 'dcos')[0]
  - dropdown = type.children.filter(item => semver.test(item.id))
  - item = hierarchy.findByPath('/' + paths[0] + '/' + paths[1])
  - versionTitle = paths[1]
  
// Konvoy Docs
if paths[0] === 'konvoy' && semver.test(paths[1])
  - type = hierarchy.children.filter(child => child.id == 'konvoy')[0]
  - dropdown = type.children.filter(item => semver.test(item.id))
  - item = hierarchy.findByPath('/' + paths[0] + '/' + paths[1])
  - versionTitle = paths[1]


- dropdown = dropdown.filter(item => item.menuWeight != -1)

include sidebar.pug
