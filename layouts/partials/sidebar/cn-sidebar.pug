- var paths = path.split('/')
- var currentPath = '/' + path
- var item = hierarchy
- var service = null
- var versionTitle = ''
- var semver = /^[0-9]+\.[0-9]+/
- var semverService = /^(v|)[0-9](.*)/
- var dropdown = []


// Service Docs
if paths[2] === 'services' && paths[3]
  - item = hierarchy.findByPath('/dcos/cn/' + paths[2] + '/' + paths[3])
  - var versioned = item.children.reduce((acc, x) => acc + semverService.test(x.id), false)
  - service = hierarchy.findByPath('/dcos/cn/' + paths[2] + '/' + paths[3])
  if versioned
    - versionTitle = paths[4]
    if !semverService.test(paths[4])
      - versionTitle = navigationTitle || title
    - dropdown = service.children
    if paths[4]
      - tmpItem = hierarchy.findByPath('/dcos/cn/' + paths[2] + '/' + paths[3] + '/' + paths[4])
    if tmpItem
      - item = tmpItem

// DC/OS Docs
if semver.test(paths[2])
  - dcosDocsRoot = hierarchy.children.filter(child => child.path == '/dcos')[0]
  - cnDocsRoot = dcosDocsRoot.children.filter(child => child.path == '/dcos/cn')[0]
  - dropdown = cnDocsRoot.children.filter(item => semver.test(item.id))
  - item = hierarchy.findByPath('/dcos/cn/' + paths[2])
  - versionTitle = paths[1]

- dropdown = dropdown.filter(item => item.menuWeight != -1)

include sidebar.pug
