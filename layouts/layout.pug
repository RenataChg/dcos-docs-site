- var isChinese = path.split('/')[1] == 'cn'
- var isDCOS = path.split('/')[0] == 'dcos'
- var paths = path.split('/')
doctype html
html(lang='en')
  head
    include partials/head.pug
  body
    div(class='layout')
      if isChinese
        include partials/header/cn-header.pug
      else
        include partials/header/en-header.pug
      if isChinese
        include partials/sidebar/cn-sidebar.pug
      else
        include partials/sidebar/en-sidebar.pug
      div(role='main', class='layout__content')
        include partials/content.pug
    include partials/scripts.pug
